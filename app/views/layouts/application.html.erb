<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) || "Untitled" %></title>
	  <%= render 'layouts/stylesheets' %>
      <%= javascript_include_tag "jquery-1.4.4.min.js", %>
      <%= javascript_include_tag "jquery-ui-1.8.8.custom.min.js" %>
      <%= javascript_include_tag "rails.js", "autocomplete-rails.js", 'application.js' %>
      <%= stylesheet_link_tag 'jquery-ui-1.8.8.custom.css' %>
	  
      <%= csrf_meta_tag %>
	  <%= yield(:head) %>
  </head>
  <body>
    <div class="container round">
      <%= render 'layouts/header' %>
        <section class="round">
        <% flash.each do |key, value| %>
          <div class="flash <%= key %> "><%= value %></div>
        <% end %>
        <%= content_tag :h1, yield(:title) if show_title? %>
        <%= yield %>
      </section>
      <%= render 'layouts/footer' %>
      <%= debug(params) if Rails.env.development? %>
    </div>
	<%= yield :javascript %>
  </body>
</html>




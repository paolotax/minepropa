%html
  %head
    %title= h(yield(:title) || "Untitled")
    = stylesheet_link_tag "http://code.jquery.com/mobile/1.0a4.1/jquery.mobile-1.0a4.1.min.css"
    = javascript_include_tag "http://code.jquery.com/jquery-1.5.2.min.js"

= form_for(@scuola) do |f|
	- if @scuola.errors.any?
		#error_explanation
			%h2= pluralize(@scuola.errors.count, "error") 
			/ prohibited this scuola from being saved:
			%ul
			= @scuola.errors.full_messages.each do |msg|
				%li msg 
	.actions.float_right
		= f.submit
	.field
		= f.label :nome_scuola
		= f.text_field :nome_scuola
	.field
		= f.label :citta
		= f.text_field :citta
	.field
		= f.label :provincia
		= f.text_field :provincia
	

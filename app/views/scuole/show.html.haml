- title "#{@scuola.nome_scuola} #{@scuola.citta} #{@scuola.provincia}"
  
.scuola_id
  = @scuola.id
  
- unless @indirizzo.nil?
  .scuola_descrizione
    = best_in_place @indirizzo, :destinatario, :type => :input
  .scuola_indirizzo
    %span
      = best_in_place @indirizzo, :indirizzo, :type => :input
    %br  
      = best_in_place @indirizzo, :cap, :type => :input
      = best_in_place @indirizzo, :citta, :type => :input
      = best_in_place @indirizzo, :provincia, :type => :input
  .scuola_indirizzo_id
    = @indirizzo.id
  .scuola_latlong
    = best_in_place @indirizzo, :latitude, :type => :input
    = best_in_place @indirizzo, :longitude, :type => :input

/ - content_for :go_map do
/   = javascript_include_tag 'jquery.gomap-1.3.0.js'

#scuola_edit
  = link_to "edit", edit_scuola_path(@scuola)
#map_show
  = submit_tag "Mostra Mappa" 

#map


/ - unless @json.nil?
/   #scuola_map
/     = gmaps4rails(@json, { "auto_adjust" => true })
/     = gmaps4rails(@json, { "map_zoom" => 10 })
/     = @json.to_s

/ - content_for :search_nav do
/   = render :partial => 'pages/search_appunti'

- if @scuola.appunti.any?
  = render :partial => 'appunti/appunto', :collection => @scuola.appunti.per_id

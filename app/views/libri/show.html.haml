#content_task_details
  #task_details
    .is_admin
      #td_header.header
        .back
          = link_to "Indietro", "javascript:history.back()"
        .delete
          = link_to "Elimina", @libro, :method => :delete, :confirm => 'Sei sicuro?', :title => 'Elimina libro'
      
      %p#notice= notice
      
      
      #td_libro_info
        #libro_img_container
          = image_tag "libri/#{@libro.sigla}.jpg"
        .info-container
          #td_task_title_input.title-container
            = best_in_place @libro, :titolo
          #td_task_title_input.title-container
            = best_in_place @libro, :sigla
            = best_in_place @libro, :copertina
            = best_in_place @libro, :consigliato
            = best_in_place @libro, :coefficente
        .clear
      #td_task_more_info

#libro_dettagli
  %p
    %b Da Consegnare:
    = @presenter.da_consegnare.sum(:quantita)
  %p
    %b Consegnati:
    = @presenter.consegnati.sum(:quantita)


= link_to 'Edit', edit_libro_path(@libro)
\|
= link_to 'Back', libri_path


#ta_da_consegnare
  %h2 Da Consegnare:
#td_notes_activities
  .notes-activities-container
    - for a in @presenter.da_consegnare
      = render 'appunto_righe/appunto_riga_full', :appunto_riga => a

#ta_da_consegnare
  %h2 Da Pagare:
#td_notes_activities
  .notes-activities-container
    - for a in @presenter.consegnati_da_pagare
      = render 'appunto_righe/appunto_riga_full', :appunto_riga => a

#ta_da_consegnare
  %h2 Pagati
#td_notes_activities
  .notes-activities-container
    - for a in @presenter.consegnati_pagati
      = render 'appunto_righe/appunto_riga_full', :appunto_riga => a


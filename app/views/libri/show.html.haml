#content_task_details
  #task_details
    .is_admin
      = render :partial => 'shared/toolbar_show', :locals => {:obj => @libro}

      %p#notice= notice

      #td_libro_info
        #libro_img_container
          = image_tag "libri/#{@libro.sigla}.jpg"
        .info-container
          #td_task_title_input.title-container
            = best_in_place @libro, :titolo
          .cm
            c.m.
            = best_in_place @libro, :cm
          .abbreviazione
            abbr.
            = best_in_place @libro, :sigla
          .prezzo_copertina
            prezzo copertina
            = best_in_place @libro, :copertina
          .prezzo_consigliato
            prezzo consigliato
            = best_in_place @libro, :consigliato
          .coefficente
            coef.
            = best_in_place @libro, :coefficente
        .clear
      #td_task_more_info




#visible_taskslist_title.group-title

#appunto.round
  #a_appunto
    #a_intestazione
      #a_destinatario
        %strong= appunto.destinatario
      #a_scuola
        = link_to appunto.scuola_nome_scuola, scuola_path(appunto.scuola) unless appunto.scuola.blank?
    #a_note
      %p=  appunto.note
      #a_recapiti
        #a_telefono
          = "tel #{ appunto.telefono}" unless appunto.telefono.blank?
        #a_email
          = "email " unless appunto.email.blank?
          =  mail_to appunto.email unless appunto.email.blank?
  #clear
  #a_footer
    - unless @appunti.nil?
      #a_check
        = check_box_tag "appunti_ids[]", appunto.id
    #status_image{ :class => 'img_appunto_' + h(appunto.id) }
      = link_to image_tag(show_status_icon(appunto.stato)), toggle_stato_appunto_path(appunto), :class => "img_appunto_" + h(appunto.id)
    #a_edit_buttons
      = link_to image_tag("s_edit18.jpeg"), edit_appunto_path(appunto), :id => 'edit_appunto'
      = link_to image_tag("s_delete18.gif"), appunto_path(appunto), :method => :delete, :confirm => "You sure?", :title => appunto.destinatario, :id => 'delete_appunto'
      = link_to image_tag("s_print18.png"), appunto_path(appunto, :format => 'pdf'), :id => 'print_appunto'
    #a_timestamp{ :class => 'ts_appunto_' + h(appunto.id) }
      %small= get_posted_string(appunto)
    #clear
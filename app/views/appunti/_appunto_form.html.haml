#create-task.sc.radius-7
  - @appunto = Appunto.new
  = form_for @appunto, { :method => 'post',  :action => appunti_path, :remote => true } do |f|
    #create-task-input.first
      .inner
        .input
          %img#task_create_loader.class{ :src => "/images/ajax-loader.gif",  :alt => "loader", :style => "display:none;" }
          = f.text_field :destinatario, {:class => 'itext small', :placeholder => "... chi?"}
          = f.autocomplete_field :nome_scuola, autocomplete_scuola_nome_scuola_appunti_path, {:size => 40, :placeholder => "... dove?", :class => 'itext small'}
    = f.submit "Aggiungi", :class => "btn_green"
    / %a#task_create_btn_add.add.btn_green Aggiungi
    .clear
    .create_task_more
      #create-task-input
        .inner
          .input
            = f.text_field :note, { :class => 'itext', :placeholder => "... che cosa?"}
      #create-task-input.tags
        .inner
          .input
            %input#task_create_input.itext{ :name => "title", :placeholder => "... tagga"}
            = f.text_field :tag_tokens, {:class => 'itext', :style => "display: none;"}
      %ul#task_create_actions.actions 
        %li#create_task_action_reset.action.reset 
          %a
            %span#task_create_reset
              Resetta
      - @appunto.appunto_righe.build(:libro_id => 1)
      - @appunto.appunto_righe.build(:libro_id => 2)

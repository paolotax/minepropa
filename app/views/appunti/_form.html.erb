<%= simple_form_for @appunto do |f| %>  
  
  <% if @appunto.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@appunto.errors.count, "error") %> Non Ã¨ possibile salvare le modifiche:</h2>

      <ul>
      <% @appunto.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.input :destinatario, :input_html => { :style => "text-transform:uppercase;" } %>  

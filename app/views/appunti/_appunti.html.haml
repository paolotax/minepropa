- unless @appunti.nil?
  #search_appunti.last
    = form_tag appunti_path, :method => 'get' do
      - hidden_field_tag :direction, params[:direction]
      - hidden_field_tag :sort, params[:sort]
      - hidden_field_tag :user_id, current_user.id
      %p
        = text_field_tag :search, params[:search]
        = submit_tag "Cerca", :name => nil
  .clear

- unless @appunti.empty? 
  #appunti_items
    = form_tag edit_or_print_appunti_path do
      = render 'appunti/appunti_navbar'
      = will_paginate @appunti
      #appunti
        = render @appunti
      = will_paginate @appunti
      = render 'appunti/appunti_navbar'
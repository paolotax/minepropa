%h1 Listing fatture

%table#fatture_table
  %thead
    %tr
      %th Numero
      %th Data
      %th Cliente
      %th Copie
      %th Importo
      %th
      %th
      %th
  %tbody
    - @fatture.each do |fattura|
      %tr
        %td= fattura.numero
        %td= fattura.data
        %td= fattura.scuola
        %td= fattura.totale_copie
        %td= fattura.importo
        %td= link_to 'Show', fattura
        %td= link_to 'Edit', edit_fattura_path(fattura)
        %td= link_to 'Destroy', fattura, :confirm => 'Are you sure?', :method => :delete

%br


%table#da_fatturare_table
  %thead
    %tr
      %th Codice
      %th Cliente
      %th Provincia
      %th Nr.Appunti
      %th Copie
      %th Importo
      %th Stato
  %tbody
    - @da_fatturare.each do |s|
      %tr
        %td= s.id
        %td= link_to s.nome_scuola, scuola_path(s.id)
        %td= s.provincia
        %td= s.count
        %td= s.copie
        %td= number_to_currency(s.importo.to_f / 100)
        %td= s.stato



= link_to 'New Fattura', new_fattura_path

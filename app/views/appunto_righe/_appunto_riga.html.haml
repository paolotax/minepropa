%li{ :id => "appunto_riga_#{appunto_riga.id}" }
  .note-avatar-div
    .note-avatar-container.radius-5
      %img{:src => "/images/libri/#{appunto_riga.libro.sigla}.jpg"}
  .note-container
    .note
      .note-top
      .note-center
        .note-header
          %span.creator= current_user.username
          .delete
            = link_to image_tag("td-delete.png"), appunto_riga, {:method => :delete, :remote => true}
            
            
          %span.date.radius-3= appunto_riga.created_at
        .note-content        
          = link_to(appunto_riga.libro.titolo, libro_url(appunto_riga.libro)) unless appunto_riga.libro.nil?
          = best_in_place appunto_riga, :quantita
          = best_in_place appunto_riga, :prezzo
          = best_in_place appunto_riga, :consegnato,  :type => :checkbox, :collection => ["no", "si"] 
          = best_in_place appunto_riga, :pagato,      :type => :checkbox, :collection => ["no", "si"]
          = appunto_riga.importo 
          = appunto_riga.valore.format(:symbol)
          / = link_to "Elimina", appunto_riga, {:method => :delete, :remote => true}
          
      .note-bottom
      .clear
  .clear


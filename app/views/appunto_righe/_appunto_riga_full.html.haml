%li{ :id => "appunto_riga_#{appunto_riga_full.id}" }  
  .note-container
    .note
      .note-top
      .note-center
        .note-header
          %span.creator= "#{appunto_riga.appunto.destinatario} #{appunto_riga.appunto.nome_scuola}"
          .delete
          %span.date.radius-3= appunto_riga.created_at
        .note-content        
          = appunto_riga.libro.titolo unless appunto_riga.libro.nil?
          = best_in_place appunto_riga, :quantita
          = link_to "Elimina", appunto_riga, {:method => :delete, :remote => true}
          
      .note-bottom
      .clear
  .clear
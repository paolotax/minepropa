<div data-role="header">
  <h1>Appunti in corso</h1>
  <%= link_to 'Add', new_appunto_path, "data-icon" => "plus", "class" => "ui-btn-right" %>
</div>

<div data-role="content">
  <ul data-role="listview", data-filter="true">

    <% @appunti.each do |post| %>
    <li>
      <%= link_to post.destinatario, post %>
      <%= link_to 'edit appunto', edit_appunto_path(post), "data-icon" => "gear" %>
    </li>
    <% end %>
  </ul>
</div>
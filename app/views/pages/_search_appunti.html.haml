- unless @appunti.nil?
  - content_for :search_bar do
    #search_bar
      - form_for @search do |f|
        = f.label :destinatario_or_note_or_scuola_nome_scuola_or_scuola_citta_contains, "Cerca appunti..."
        #field_cerca
          = f.text_field :destinatario_or_note_or_scuola_nome_scuola_or_scuola_citta_contains
        = f.label :scuola_citta_matches, "Citta"
        #select_citta
          = f.select(:scuola_citta_matches , get_citta_appunti.collect {|p| [p.citta]}, :include_blank => true)
        .clear
        = f.label :scuola_provincia_matches, "Provincia"
        .right
          = f.select(:scuola_provincia_matches , get_provincie_appunti.collect {|p| [p.provincia]}, :include_blank => true)
        .clear
        = f.label :stato_matches, "Stato"
        %ul#list_stato.right
          = f.checks :stato_in , [['da completare',''], ["in sospeso", "P"],["completato", "X"]], :class => 'checkboxy' do |c|
            %li
              = c.box
              = c.label
        .clear
        = link_to 'clear', appunti_path
        .right
          = f.submit "Cerca", :disable_with => 'sto cercando...'
        .clear
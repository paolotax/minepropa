<%- if @appunti.size > 0 %>
  $("#visible_taskslist_title").html("Trovati <%= @appunti.size.to_s %> appunti. <%= @term.values[0] %>");
<%- else %>
  $("#visible_taskslist_title").html("La ricerca di - <%= @term.values[0] %> - non ha prodotto alcun risultato. ");
<%- end %>
$("#appunti_div").html("<%= escape_javascript(render("appunti/appunti")) %>");